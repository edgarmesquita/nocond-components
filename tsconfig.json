{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "./dist",
    "moduleResolution": "node",
    "noEmit": true
  },
  "include": [
    "src/lib/**/*",
    "src/@types/assets/index.d.ts"
  ],
  "exclude": [
    "src/lib/**/*.stories.tsx"
  ]
}
